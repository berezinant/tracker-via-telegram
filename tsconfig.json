{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "outDir": "./build",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": [
    "/node_modules/"
  ]
}
